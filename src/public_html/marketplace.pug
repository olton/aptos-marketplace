doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

        link(rel="stylesheet", href="vendor/metro4/css/metro-all.min.css")
        link(rel="stylesheet", href="css/index.css")

        title #{title}
    body.m4-cloak

        include header

        div.container-fluid
            div.container
                div.row.controls
                    div
                        button.button.info
                            span.mif-apps
                            span Create Collection
                        button.button.warning
                            span.mif-image
                            span Create Token
                    div.ml-auto
                        button.button.success
                            span.mif-user
                            span Account

        include scripts

        script(type="module" src="js/websocket.js")
        script(type="module" src="js/index.js")
